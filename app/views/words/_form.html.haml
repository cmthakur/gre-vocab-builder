= form_for @word, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :lemma, :class => 'control-label'
    .controls
      = f.text_field :lemma, :class => 'text_field'
  .control-group
    = f.label :definition, :class => 'control-label'
    .controls
      = f.text_area :definition, :class => 'text_area'
  .control-group
    = f.label :high_frequency, :class => 'control-label'
    .controls
      = f.check_box :high_frequency, :class => 'check_box'
  .control-group
    = f.label :images, :class => 'control-label'
    .controls
      = f.text_area :images, :class => 'text_area'
  .control-group
    = f.label :wordnet_id, :class => 'control-label'
    .controls
      = f.number_field :wordnet_id, :class => 'number_field'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), words_path, :class => 'btn'
