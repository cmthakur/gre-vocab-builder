- model_class = Word

.page-header
  %h1
    =t '.title', :default => model_class.model_name.human.pluralize
    = link_to t('.new', :default => t("helpers.links.new_word")), new_word_path, :class => 'btn btn-primary pull-right'

.navbar.affix-top{"data-offset-top" => "50", "data-spy" => "affix"}
  #words_pagination.pagination
    %ul
      - @words.keys.each do |first_letter|
        %li= link_to(first_letter.capitalize, "##{first_letter}")
        
- @words.each do |first_letter, words|
  %h2{ id: "#{first_letter}" }
    = first_letter.capitalize
  %table.table.table-striped
    %tbody
      - words.each do |word|
        %tr
          %td= word.lemma
          %td= word.definition
          %td= word.high_frequency
          %td.span2
            = link_to t('.edit', :default => t("helpers.links.edit")), edit_word_path(word), :class => 'btn btn-mini'
            = link_to t('.destroy', :default => t("helpers.links.destroy")), word_path(word), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'
