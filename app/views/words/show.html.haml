- model_class = Word

.word
  
  .page-header
    %h1.lemma.center=t '.title', :default => @word.lemma
    .center.definition= @word.definition

  %div.center
    - @word.images.each do |image_url|
      %img.word-image{ src: image_url }

  %div
    %ol
      - @word.synsets.each do |synset|
        %li= synset.to_s